<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="1dip" android:color="@color/pickerblue" />
            <gradient android:angle="-90" android:startColor="@color/pickerblue" android:endColor="@color/pickerblue"  />
        </shape>
    </item>

    <item android:state_enabled="false" >
        <shape android:shape="rectangle"   >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/pickelightrblue" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white" />
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"   >
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="@color/pickerblue" />
            <gradient android:angle="-90" android:startColor="@color/white" android:endColor="@color/white" />
        </shape>
    </item>
</selector>

